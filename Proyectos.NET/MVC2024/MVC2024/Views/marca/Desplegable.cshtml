<h1>Desplegable</h1>

@Html.DropDownList("LasMarcas", new List<SelectListItem>{
    new SelectListItem{Text="Audi", Value="1", Selected=true},
    new SelectListItem{Text="BMW", Value="2"},
    new SelectListItem{Text="Mercedes", Value="3"},
}, "Selecciona una marca");
    
@Html.DropDownList("Marcas","Selecciona una marca")

<select id="unasmarcas" name="unasmarcas">
    @foreach(var item in ViewBag.Marcas2)
    {
        <option value="@item.Id">@item.NomMarca</option>
    }
</select>


