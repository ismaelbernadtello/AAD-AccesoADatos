@page
@using ExamenIsmaelBernad.Modelos;
@model ExamenIsmaelBernad.Pages.Provincias.FormularioComunidadModel
@{
}
<form method="post" class="mt-3" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-10">
            <select class="form-select mb-3" asp-items="Html.GetEnumSelectList<Comunidad>()">
                <!--Añadido el using RazorPages.Modelos en _ViewImports.cshtml-->
                <option value="Selecciona uno">Selecciona una Comunidad</option>
            </select>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Sacar Provincias</button>
            </div>
        </div>
    </div>
</form>


<div class="card-group">
    <h1>Provincias de esa comunidad: </h1>
    <br />
    @if (Model.Provincias != null && Model.Provincias.Any())
    {
        @foreach (var provincia in Model.Provincias)
        {
            <div class="card m-3 border" style="min-width: 18rem; max-width:30%">
                <div class="card-header">
                    <p>CodProvincia: @provincia.codProvincia</p>
                    <p>NomProvincia:  @provincia.nomProvincia</p>
                    <p>Superficie: @provincia.superficie</p>
                    <p>Numero habitantes:  @provincia.nomProvincia</p>
                    <p>CodComunidad: @provincia.codComunidad</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No has seleccionado una comunidad.</p>
    }
</div>


